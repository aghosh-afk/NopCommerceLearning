@model Nop.Plugin.Misc.CustomerReminder.Data.CustomerReminderRecord
@{
    Layout = "_AdminLayout";
}

<h1>Create Customer Reminder</h1>

<form asp-action="Create" asp-controller="CustomerReminder" asp-area="Admin" method="post">

    @Html.AntiForgeryToken()

    <div class="form-group">
        <label>Customer Id</label>
        <input name="CustomerId" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Reminder Title</label>
        <input name="ReminderTitle" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Reminder Message</label>
        <textarea name="ReminderMessage" class="form-control" required></textarea>
    </div>

    <div class="form-group">
        <label>Reminder Date</label>
        <input name="ReminderDate"
               type="datetime-local"
               class="form-control"
               value="@DateTime.UtcNow.ToString("yyyy-MM-ddTHH:mm")"
               required />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
