@model Nop.Plugin.Misc.CustomerReminder.Data.CustomerReminderRecord
@{
    Layout = "_AdminLayout";
}

<h1>Edit Customer Reminder</h1>

<form asp-action="Edit" asp-controller="CustomerReminder" asp-area="Admin" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="form-group">
        <label>Customer Id</label>
        <input name="CustomerId" value="@Model.CustomerId" class="form-control" />
    </div>

    <div class="form-group">
        <label>Reminder Title</label>
        <input name="ReminderTitle" value="@Model.ReminderTitle" class="form-control" />
    </div>

    <div class="form-group">
        <label>Reminder Message</label>
        <textarea name="ReminderMessage" class="form-control">@Model.ReminderMessage</textarea>
    </div>

    <div class="form-group">
        <label>Reminder Date</label>
        <input name="ReminderDate"
               type="datetime-local"
               class="form-control"
               value="@Model.ReminderDate.ToString("yyyy-MM-ddTHH:mm")" />
    </div>

    <button type="submit" class="btn btn-success">Update</button>
    <a href="@Url.Action("List")" class="btn btn-secondary">Cancel</a>
</form>
